generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum PilotLiveStatus {
    pre
    live
    off
}

model Pilot {
    id              String          @id @db.Char(10)
    cid             String
    callsign        String
    latitude        Float
    longitude       Float
    altitude_agl    Int
    altitude_ms     Int
    groundspeed     Int
    vertical_speed  Int
    heading         Int
    aircraft        String
    transponder     String          @db.Char(4)
    frequency       Int
    name            String
    server          String
    pilot_rating    String
    military_rating String
    qnh_i_hg        Float
    qnh_mb          Float
    flight_plan     Json?
    times           Json?
    logon_time      DateTime
    last_update     DateTime        @default(now())
    live            PilotLiveStatus @default(off)

    sched_off_block DateTime?
    sched_on_block  DateTime?
    dep_icao        String?
    arr_icao        String?
    ac_reg          String?

    trackpoint Trackpoint?

    @@index([live, last_update], map: "pilots_live_last_idx") // cleanup
    @@index([callsign, sched_off_block, id], map: "pilots_callsign_sched_idx") // data by callsign queries
    @@index([ac_reg, sched_off_block, id], map: "pilots_acreg_sched_idx") // data by registration queries
    @@index([dep_icao, sched_off_block, id], map: "pilots_dep_idx") // airport flights page
    @@index([arr_icao, sched_on_block, id], map: "pilots_arr_idx") // airport flights page
}

model Trackpoint {
    id         String   @id @db.Char(10)
    points     Bytes
    created_at DateTime @default(now())

    pilot Pilot @relation(fields: [id], references: [id], onDelete: Cascade)
}

model User {
    id             String    @id
    hasNavigraph   Boolean   @default(false)
    navigraphToken Json?
    settings       Json?
    filters        Json?
    bookmarks      Json?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
    lastLogin      DateTime?
}
