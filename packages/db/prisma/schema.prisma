generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model Pilot {
    id              String   @id @db.Char(10)
    cid             String
    callsign        String
    latitude        Float
    longitude       Float
    altitude_agl    Int
    altitude_ms     Int
    groundspeed     Int
    vertical_speed  Int
    heading         Int
    aircraft        String
    transponder     String   @db.Char(4)
    frequency       Int
    name            String
    server          String
    pilot_rating    String
    military_rating String
    qnh_i_hg        Float
    qnh_mb          Float
    flight_plan     Json?
    times           Json?
    logon_time      DateTime
    last_update     DateTime @default(now())
    live            Boolean  @default(false)

    sched_off_block DateTime?
    sched_on_block  DateTime?
    dep_icao        String?
    arr_icao        String?

    trackpoint Trackpoint?

    @@index([live, callsign, last_update], map: "pilots_live_callsign_last_idx")
    @@index([callsign, last_update], map: "pilots_callsign_last_idx")
    @@index([dep_icao, sched_off_block, id], map: "pilots_dep_idx")
    @@index([arr_icao, sched_on_block, id], map: "pilots_arr_idx")
}

model Trackpoint {
    id         String   @id @db.Char(10)
    points     Bytes
    created_at DateTime @default(now())

    pilot Pilot @relation(fields: [id], references: [id])

    @@index([id])
}

model User {
    cid      BigInt @id
    settings Json?
}
